{
  "name": "pop-a-loon-backend",
  "version": "1.0.0",
  "description": "Backend RESTfull API for Pop-a-loon",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon api/index.ts",
    "build": "ncc build ./api/index.ts -o dist -m",
    "start": "node dist/index.js",
    "prepare": "husky"
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo 'Running pre-commit hook' && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SimonStnn/pop-a-loon-backend.git"
  },
  "keywords": [
    "pop-a-loon",
    "backend",
    "api"
  ],
  "author": "SimonStnn",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/SimonStnn/pop-a-loon-backend/issues"
  },
  "homepage": "https://github.com/SimonStnn/pop-a-loon-backend#readme",
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.2.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@vercel/ncc": "^0.38.1",
    "husky": "^9.0.11",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  }
}
